<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_white_16_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvHeader"
        android:textSize="16sp"

        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/manrope_bold"
        android:textColor="@color/black"
        android:text="Your cart contains dishes from different restaurant! Do you want to discard the selection and add this dish?"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="32dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Cancel"
            android:id="@+id/btnCancel"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/white_bg_with_border"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="OK"
            android:id="@+id/btnOk"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/rounded_corner_orange_bg"
            android:layout_weight="1"/>

    </LinearLayout>





</LinearLayout>