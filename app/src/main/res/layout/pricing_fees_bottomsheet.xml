<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CC000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/top_round_corner_white_bg">
        <com.fdxUser.app.CustomFonts.ManropeBoldTextView
            android:id="@+id/ttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Pricing &amp; Fees"
            android:textColor="#000000"
            android:textSize="18sp"/>

    <com.fdxUser.app.CustomFonts.ManropeRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/pricing_fees_txt"
        android:textColor="#000000"
        android:layout_below="@+id/ttle"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/btnGotIt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_corner_orange_bg"
        android:text="Got It"
        android:textColor="@color/white"
        android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>