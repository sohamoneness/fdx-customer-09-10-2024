<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLL"
    android:layout_width="142dp"
    android:layout_height="152dp"
    android:layout_marginLeft="8dp"
    android:gravity="center"
    android:orientation="vertical">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFoodImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundedCornersImageView2"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <com.fdxUser.app.CustomFonts.ManropeExtraBoldTextView
                android:id="@+id/tvItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineHeight="20dp"
                android:maxLines="2"
                android:text="bgasvdsvcvsahfvhsavjhasvbvaschv"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                android:id="@+id/tvDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pop_rest_name"
                android:ellipsize="end"
                android:lineHeight="14dp"
                android:maxLines="2"
                android:text=""
                android:visibility="gone"
                android:textSize="1sp" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="200"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:id="@+id/btnAdd"
                android:layout_alignParentRight="true"
                android:background="@drawable/rounded_corner_orange_bg"
                android:text="ADD"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:id="@+id/tvAdded"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="@drawable/rounded_corner_white_bg"
                android:text="Added"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
