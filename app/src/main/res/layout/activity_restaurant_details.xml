<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RestaurantScreens.RestaurantDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/white"
            app:expandedTitleGravity="top"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_rest_img"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:transitionName="img_transition"
                    app:layout_collapseMode="none"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/ivRestLogo"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_above="@+id/rest_card_rl"
                    android:src="@drawable/fdxlogo" />

                <RelativeLayout
                    android:id="@+id/rest_card_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_rest_img"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="8dp">

                            <com.fdxUser.app.CustomFonts.ManropeExtraBoldMultiLineTextView
                                android:id="@+id/tv_rest_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="32sp"
                                android:textStyle="bold" />



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_card_clock" />

                                <TextView
                                    android:id="@+id/tv_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center_vertical"
                                    android:text="0-5 kms | \u20B9 30 Deliveryfee will apply"
                                    android:textSize="14sp" />


                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_fdx_rest_logo" />

                            <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                                android:id="@+id/tv_rest_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text=""
                                android:textColor="#494949"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                                android:id="@+id/tvRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:text="0"
                                android:textColor="#494949"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_star" />
                            <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                                android:id="@+id/tvReviewCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:layout_marginLeft="4dp"
                                android:text="0 reviews"
                                android:textColor="#F05225"
                                android:textSize="13sp" />

                            <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                                android:id="@+id/tvEstTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textColor="#494949"
                                android:textSize="13sp" />


                            <ImageView
                                android:layout_width="4dp"
                                android:layout_height="4dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="1dp"
                                android:visibility="gone"
                                android:src="@drawable/ic_dot" />


                            <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                                android:id="@+id/tvDist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textColor="#494949"
                                android:visibility="gone"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                                    android:id="@+id/tvOpenStat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#137C39"
                                    android:textSize="13sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="4dp"
                                    android:src="@drawable/ic_dot" />

                                <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                                    android:id="@+id/tvCloseTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Closes at"
                                    android:textColor="#494949"
                                    android:textSize="13sp" />


                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivGoto"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_right_arrow" />

                        </RelativeLayout>
                        <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:textSize="13sp"
                            android:id="@+id/tvPreTime"
                            android:textColor="#494949"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone">

                            <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                                android:id="@+id/tvPricingFees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/icon_info"
                                android:drawablePadding="10dp"
                                android:text="Pricing &amp; Fees"
                                android:textColor="#494949"
                                android:textSize="13sp" />
                        </RelativeLayout>

                        <com.smarteist.autoimageslider.SliderView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:id="@+id/imgSlider"
                            app:sliderAnimationDuration="400"
                            app:sliderAutoCycleDirection="back_and_forth"
                            app:sliderIndicatorAnimationDuration="400"
                            app:sliderIndicatorEnabled="true"
                            app:sliderIndicatorGravity="center_horizontal|bottom"
                            app:sliderIndicatorMargin="15dp"
                            app:sliderIndicatorOrientation="horizontal"
                            app:sliderIndicatorPadding="4dp"
                            app:sliderIndicatorRadius="1.5dp"
                            app:sliderIndicatorSelectedColor="#5A5A5A"
                            app:sliderIndicatorUnselectedColor="#FFF"
                            app:sliderScrollTimeInSec="1"
                            android:visibility="gone"/>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/couponsRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="16dp"
                            android:clipToPadding="false"
                            android:scrollbars="none"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/noCouponLL"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/no_coupon_bg"
                            android:gravity="center"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Coupons Available Right Now!"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <com.fdxUser.app.CustomFonts.ManropeExtraBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Past Orders"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/past_order_rest_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:layout_marginLeft="8dp"
                            android:visibility="visible" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:visibility="gone"
                            android:id="@+id/tvNoPast"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="No Past Order To Show!"/>

                        <LinearLayout
                            android:layout_width="260dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/side_round_bg"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                                android:id="@+id/tvAll"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".9"
                                android:background="@drawable/black_rounded_corner"
                                android:gravity="center"
                                android:lineHeight="11dp"
                                android:padding="4dp"
                                android:text="All"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:id="@+id/vegLL"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".9"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="4dp">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/icon_veg" />


                                <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                                    android:id="@+id/tvVeg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center"
                                    android:lineHeight="11dp"
                                    android:text="Veg"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/nonvegLL"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="4dp">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/icon_nonveg" />


                                <com.fdxUser.app.CustomFonts.ManropeBoldTextView
                                    android:id="@+id/tvNonveg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:gravity="center"
                                    android:lineHeight="11dp"
                                    android:text="Nonveg"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/et_search"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/search_bg"
                            android:drawableLeft="@drawable/icon_search"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="8dp"
                            android:textColor="#a9a9a9"
                            android:text="Search here"
                            android:textSize="14sp" />


                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/rest_card_rl"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Featured Items"
                        android:textSize="22sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/featuredItemRv"
                        android:scrollbars="none"
                        android:layout_marginTop="16dp"/>


                </LinearLayout>

            </RelativeLayout>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_round_back" />

                    <TextView
                        android:id="@+id/tvHeaderTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/iv_back"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <ImageView
                        android:id="@+id/ivCart"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:visibility="gone"
                        android:layout_toLeftOf="@+id/ivShare"
                        android:src="@drawable/ic_round_cart" />

                    <RelativeLayout
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_white_bg"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/ivShare">

                        <ImageView
                            android:id="@+id/ivFav"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_fav_outline" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/ivShare"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_share_white_bg" />

                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_search_row"
                        android:visibility="gone" />

                </RelativeLayout>


            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            app:tabIndicatorColor="@color/black"
            app:tabBackground="@drawable/indicator_bg"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            app:tabMode="scrollable"
            app:tabTextColor="@color/black"
            android:id="@+id/menu_tab_layout"
            app:tabIndicatorAnimationMode="elastic"
            app:tabTextAppearance="@style/MyCustomTextAppearance"
            app:tabSelectedTextColor="@color/black"/>

    </com.google.android.material.appbar.AppBarLayout>


    <include layout="@layout/content_activity_rest_details"></include>


    <RelativeLayout
        android:id="@+id/viewCartRL"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_corner_orange_bg"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/tvCartQty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1 items"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tvCartPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvViewCart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="View Cart"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>